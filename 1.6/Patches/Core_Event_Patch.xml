<?xml version="1.0" encoding="UTF-8"?>
<Patch>

    <Operation Class="PatchOperationConditional">
        <xpath>Defs/WeatherDef[defName="Rain" or defName="Fog" or defName="RainyThunderstorm" or defName="FoggyRain"]/modExtensions</xpath>
        <match Class="PatchOperationAdd">            <!-- mod extensions exists here -->
            <xpath>Defs/WeatherDef[defName="Rain" or defName="Fog" or defName="RainyThunderstorm" or defName="FoggyRain"]/modExtensions</xpath>
            <value>
                <li Class="RimScentReworked.ModExtension_Scent">
                    <thought>RimScent_PetrichorScent</thought>
                </li>
            </value>
        </match>
        <nomatch Class="PatchOperationAdd">            <!-- modextensions does not exist here, so we add it ourselves-->
            <xpath>Defs/WeatherDef[defName="Rain" or defName="Fog" or defName="RainyThunderstorm" or defName="FoggyRain"]</xpath>
            <value>
                <modExtensions>
                    <li Class="RimScentReworked.ModExtension_Scent">
                        <thought>RimScent_PetrichorScent</thought>
                    </li>
                </modExtensions>
            </value>
        </nomatch>
    </Operation>

