<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <!-- These defs are only for base-game rimworld things that have scents -->

    <ThoughtDef>
        <defName>RimScent_VomitScent</defName>
        <durationDays>0.1</durationDays>
        <stackLimit>1</stackLimit>
        <stages>
            <li>
                <label>stench of vomit</label>
                <description>The sour, acidic smell of half-digested food. It's making my stomach turn.</description>
                <baseMoodEffect>-4</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef>
        <defName>RimScent_BloodScent</defName>
        <durationDays>0.1</durationDays>
        <stackLimit>1</stackLimit>
        <stages>
            <li>
                <label>scent of blood</label>
                <description>The heavy, iron-like smell of fresh blood. It's the scent of violence.</description>
                <baseMoodEffect>-2</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef>
