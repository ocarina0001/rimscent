<?xml version="1.0" encoding="UTF-8"?>
<Patch>

    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="Apparel_VacsuitHelmet"]/equippedStatOffsets</xpath>
        <value>
            <RimScent_SmellSensitivity>-999</RimScent_SmellSensitivity>
        </value>
    </Operation>

    <Operation Class="PatchOperationConditional">
        <xpath>Defs/WeatherDef[defName="ToxRain"]/modExtensions</xpath>
        <match Class="PatchOperationAdd">            <!-- mod extensions exists here -->
            <xpath>Defs/WeatherDef[defName="ToxRain"]/modExtensions</xpath>
            <value>
                <li Class="RimScentReworked.ModExtension_Scent">
                    <thought>RimScent_ToxicScent</thought>
                </li>
            </value>
        </match>
        <nomatch Class="PatchOperationAdd">            <!-- modextensions does not exist here, so we add it ourselves-->
            <xpath>Defs/WeatherDef[defName="ToxRain"]</xpath>
            <value>
                <modExtensions>
                    <li Class="RimScentReworked.ModExtension_Scent">
                        <thought>RimScent_ToxicScent</thought>
                    </li>
                </modExtensions>
            </value>
        </nomatch>
    </Operation>

