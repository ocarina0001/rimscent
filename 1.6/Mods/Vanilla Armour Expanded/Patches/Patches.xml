<?xml version="1.0" encoding="UTF-8"?>
<Patch>

    <Operation Class="PatchOperationConditional">
        <xpath>Defs/ThingDef[defName="VAE_Apparel_RiotHelmet" or defName="VAE_Headgear_StoneWarMask"]/equippedStatOffsets</xpath>
        <match Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="VAE_Apparel_RiotHelmet" or defName="VAE_Headgear_StoneWarMask"]/equippedStatOffsets</xpath>
            <value>
                <RimScent_SmellSensitivity>-0.1</RimScent_SmellSensitivity>
            </value>
        </match>
        <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="VAE_Apparel_RiotHelmet" or defName="VAE_Headgear_StoneWarMask"]</xpath>
            <value>
                <equippedStatOffsets>
                    <RimScent_SmellSensitivity>-0.1</RimScent_SmellSensitivity>
                </equippedStatOffsets>
            </value>
        </nomatch>
    </Operation>

