<?xml version="1.0" encoding="UTF-8"?>
<Patch>

    <Operation Class="PatchOperationConditional">
        <xpath>Defs/ThingDef[defName="VAE_Headgear_SurgicalMask"]/equippedStatOffsets</xpath>
        <match Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="VAE_Headgear_SurgicalMask"]/equippedStatOffsets</xpath>
            <value>
                <RimScent_SmellSensitivity>-0.1</RimScent_SmellSensitivity>
            </value>
        </match>
        <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="VAE_Headgear_SurgicalMask"]</xpath>
            <value>
                <equippedStatOffsets>
                    <RimScent_SmellSensitivity>-0.1</RimScent_SmellSensitivity>
                </equippedStatOffsets>
            </value>
        </nomatch>
    </Operation>

</Patch>