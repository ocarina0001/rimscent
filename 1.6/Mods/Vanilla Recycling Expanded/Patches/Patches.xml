<Patch>

    <Operation Class="PatchOperationConditional">
        <xpath>Defs/ThingDef[defName="VRecyclingE_TrashBrick" or defName="VRecyclingE_Trash"]/modExtensions</xpath>
        <match Class="PatchOperationAdd">            <!-- mod extensions exists here -->
            <xpath>Defs/ThingDef[defName="VRecyclingE_TrashBrick" or defName="VRecyclingE_Trash"]/modExtensions</xpath>
            <value>
                <li Class="RimScentReworked.ModExtension_Scent">
                    <thought>RimScent_TrashScent</thought>
                </li>
            </value>
        </match>
        <nomatch Class="PatchOperationAdd">            <!-- modextensions does not exist here, so we add it ourselves-->
            <xpath>Defs/ThingDef[defName="VRecyclingE_TrashBrick" or defName="VRecyclingE_Trash"]</xpath>
            <value>
                <modExtensions>
                    <li Class="RimScentReworked.ModExtension_Scent">
